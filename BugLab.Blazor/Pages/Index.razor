@page "/"
@page "/home"
@page "/index"

    <AuthorizeView>
        <Authorized>
            <MudText Typo="Typo.h5">Welcome @context.User.FindFirst(ClaimTypes.Email).Value</MudText>
            <MudNavMenu Class="d-flex">
                <MudLink Icon="@Icons.Filled.Group" Href="/projects">Projects</MudLink>
                <MudLink Class="ml-5" Icon="@Icons.Filled.BugReport" Href="/my-bugs">My Bugs</MudLink>
            </MudNavMenu>
        </Authorized>
        <NotAuthorized>
            <MudTabs>
                <MudTabPanel Text="Login">
                    <LoginComponent />
                </MudTabPanel>
                <MudTabPanel Text="Register">
                    <RegisterComponent />
                </MudTabPanel>
            </MudTabs>
        </NotAuthorized>
    </AuthorizeView>